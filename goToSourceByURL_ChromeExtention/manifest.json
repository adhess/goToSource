{
  "manifest_version": 2,
  "name": "Go To Source",
  "description": "Allows to navigate directly from browser to component source code.",
  "background": {
    "scripts": ["background_script.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "all_frames": true,
      "js": ["contentScript.js"]
    }
  ],
  "version": "0.1",
  "permissions": [
    "tabs",
    "http://localhost/",
    "https://localhost/",
    "<all_urls>",
    "contextMenus"
  ],
  "browser_action": {
    "default_icon": "logo/logo_8_19.png",
    "default_title": "go to source!"
  },
  "commands": {
    "goToComponent": {
      "suggested_key": {
        "default": "Ctrl+Shift+Q"
      },
      "description": "go to source"
    },
    "getAllComponents": {
      "suggested_key": {
        "default": "Ctrl+Shift+A"
      },
      "description": "get all components"
    }
  },
  "icons": {
    "16": "logo/logo_8_16.png",
    "48": "logo/logo_8_48.png",
    "128": "logo/logo_8_128.png"
  },
  "content_security_policy":"script-src 'self' https://apis.google.com; object-src 'self'"
}